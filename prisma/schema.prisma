generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ConsentStatus {
  ACTIVE
  REVOKED
  EXPIRED
}

model Consent {
  id         String         @id @default(cuid())
  customerId String
  provider   String
  scopes     String[]
  status     ConsentStatus  @default(ACTIVE)
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  auditLogs  AuditLog[]
}

model AuditLog {
  id        String   @id @default(cuid())
  consentId String
  event     String
  metadata  Json
  createdAt DateTime @default(now())

  consent   Consent  @relation(fields: [consentId], references: [id], onDelete: Cascade)
}

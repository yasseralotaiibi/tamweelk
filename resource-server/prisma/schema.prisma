generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Consent {
  id        String     @id @default(uuid())
  subject   String
  purpose   String
  scopes    String[]
  createdAt DateTime   @default(now())
  expiresAt DateTime?
  revokedAt DateTime?
  auditLogs AuditLog[]
}

model AuditLog {
  id        String   @id @default(uuid())
  type      String
  actorId   String?
  consentId String?
  details   Json
  createdAt DateTime @default(now())

  consent   Consent? @relation(fields: [consentId], references: [id])
}
